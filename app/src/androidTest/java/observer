public class Leaderboard extends Observable {
    private String mFullName;
    private int mMinutesWatched;
    private static mLeaderboard INSTANCE = null;

    private void mLeaderboard() {
        getNewDataFromRemote();
    }

    // RETURNS A SINGLE CLASS INSTANCE, CREATING IT IF NECESSARY
    public static mLeaderboard getInstance() {
        if(INSTANCE == null) {
            INSTANCE = new mLeaderboard();
        }
        return INSTANCE;
    }

    // SIMULATES NETWORK AND GETS DATA FROM REMOTE
    private void getNewDataFromRemote() {
        final Handler handler = new Handler();
        handler.postDelayed(new Runnable() {
            @Override
            public void run() {
                setUserData("Mgbemena Chike", 102);
            }
        }, 10000);
    }

    /* CHANGES USER DATA ON THE LEADERBOARD ONCE IT GETS THE UPDATED DATA */
    public void setUserData(String fullName, int numMinutesWatched) {
        mFullName = fullName;
        mMinutesWatched = minutesWatched;
        setMinutesWatched(minutesWatched);
        notifyObservers();
    }

    public String getFullName() {
        return mFullName;
    }

    public int getNumMinutesWatched() {
        return mMinutesWatched;
    }
}
